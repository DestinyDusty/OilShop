<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*создание выпадающего списка, элемента select при помощи Html-хелпера*@
            <div class="form-group">
                <label asp-for="IdBrand" class="control-label"></label>
                @Html.DropDownListFor(m => m.IdBrand,@* для какого свойства модели*@
ViewBag.Brand as SelectList,       /* получаем переданные данные через ViewBag*/
new { id = "brand", @class = "form-control" })     @* указываем дополнительные атрибуты для элемента*@
        </div>
        <div class="form-group">
            <label asp-for="IdType" class="control-label"></label>
            @Html.DropDownListFor(m => m.IdType,
               ViewBag.Type as SelectList,
               new { id = "type", @class = "form-control" })
        </div>
        <div class="form-group">
            <label asp-for="IdViscosity" class="control-label"></label>
            @Html.DropDownListFor(m => m.IdViscosity,
               ViewBag.Viscosity as SelectList,
               new { id = "viscosity", @class = "form-control" })
        </div>
        <div class="form-group">
            <label asp-for="IdCapasity" class="control-label"></label>
            @Html.DropDownListFor(m => m.IdCapasity,
               ViewBag.Capasity as SelectList,
               new { id = "capasity", @class = "form-control" })
        </div>
        <div class="form-group">
            <label asp-for="IdCountry" class="control-label"></label>
            @Html.DropDownListFor(m => m.IdCapasity,
               ViewBag.Capasity as SelectList,
               new { id = "capasity", @class = "form-control" })
        </div>
        <div class="form-group">
            <label asp-for="IdSupplier" class="control-label"></label>
            @Html.DropDownListFor(m => m.IdSupplier,
               ViewBag.Supplier as SelectList,
               new { id = "supplier", @class = "form-control" })
        </div>
        <div class="form-group">
            <label asp-for="DateOfManufacture" class="control-label"></label>
            <input asp-for="DateOfManufacture" class="form-control" />
            <span asp-validation-for="DateOfManufacture" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ExpirationDate" class="control-label"></label>
            <input asp-for="ExpirationDate" class="form-control" />
            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PurchasePrice" class="control-label"></label>
            <input asp-for="PurchasePrice" class="form-control" />
            <span asp-validation-for="PurchasePrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PurchaseDate" class="control-label"></label>
            <input asp-for="PurchaseDate" class="form-control" />
            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-primary" />
        </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            // когда вызывается событие change для элемента управления
            // т.е. выбирается новый элемент списка
            $('#formOfStudy').change(function()
            {
                // получаем выбранный id
                var id = $(this).val();
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("GetItems")/' + id,
                    success: function (data) {
                        // заменяем содержимое присланным частичным представлением
                        $('#specialty').replaceWith(data);
                    }
                });
            });
        })
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}