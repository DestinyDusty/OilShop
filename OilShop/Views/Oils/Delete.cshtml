@model OilShop.Models.Data.Oil

@{
    ViewData["Title"] = "Удаление - Масло";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item"><a asp-controller="Oils" asp-action="Index">Масло</a></li>
        <li class="breadcrumb-item active">Удаление</li>
    </ol>
</nav>

<h3>
    <a class="btn text-dark" asp-action="Index" title="Вернуться к списку">
        <i class="fas fa-arrow-left"></i>
    </a>
    Удаление масла
</h3>

<div>
    <h4>
        Вы уверены, что желаете удалить запись?<br />
        Все связанные данные будут удалены!
    </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.DateOfManufacture)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DateOfManufacture)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PurchasePrice)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PurchasePrice)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Brand.BrandOil)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Type.TypeOil)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Viscosity)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Viscosity.ViscosityOil)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Capasity)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Capasity.Id)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Country.CountryOrigin)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Supplier.SupplierOil)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
