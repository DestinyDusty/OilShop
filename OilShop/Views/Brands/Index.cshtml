@model OilShop.ViewModels.Brands.IndexBrandViewModel

@{
    ViewData["Title"] = "Бренды";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item active">Бренды</li>
    </ol>
</nav>
<h2>Бренды</h2>

<div class="d-flex justify-content-between">
    <div class="p-2">
        <ul class="nav">

            <li>
                <a class="btn text-dark" asp-action="Create">
                    <i class="far fa-plus-square"></i>  Добавить бренд
                </a>
            </li>
        </ul>
    </div>
    <div class="p-2">
        <form class="form-inline" asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p>
                    <input type="text" name="brand" placeholder="Бренд" value="@Model.FilterBrandViewModel.SelectedBrand" class="form-control" />

                    <input type="submit" value="Поиск" class="btn btn-outline-success" /> |
                    <a class="=btn text-dark" asp-action="Index"><i class="fas fa-eraser"></i></a>
                </p>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@(Model.SortBrandViewModel.BrandSort)"
                   asp-route-brand="@(Model.FilterBrandViewModel.SelectedBrand)"></a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Brands)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandOil)
                </td>
                <td>
                    <a class="btn text-dark" asp-action="Details" asp-route-id="@item.Id" title="Посмотреть подробнее">
                        <i class="far fa-eye"></i>
                    </a> |
                    <a class="btn text-dark" asp-action="Edit" asp-route-id="@item.Id" title="Редактировать">
                        <i class="fas fa-pencil-alt"></i>
                    </a> |
                    <a class="btn text-dark" asp-action="Delete" asp-route-id="@item.Id" title="Удалить">
                        <i class="far fa-minus-square"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        @if (Model.PageViewModel.HasPreviousPage || Model.PageViewModel.HasNextPage)
        {
            @if (Model.PageViewModel.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" title="Назад"
                       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
                       asp-route-sortOrder="@(Model.SortBrandViewModel.Current)"
                       asp-route-brand="@(Model.FilterBrandViewModel.SelectedBrand)">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
            }
            @if (Model.PageViewModel.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" title="Вперед"
                       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
                       asp-route-sortOrder="@(Model.SortBrandViewModel.Current)"
                       asp-route-code="@(Model.FilterBrandViewModel.SelectedBrand)">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            }
        }
    </ul>
</nav>
