@model OilShop.Models.Data.OilInStock

@{
    ViewData["Title"] = "Удаление - Масло со склада";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item"><a asp-controller="OilsInStock" asp-action="Index">Масло на складе</a></li>
        <li class="breadcrumb-item active">Удаление</li>
    </ol>
</nav>

<h3>
    <a class="btn text-dark" asp-action="Index" title="Вернуться к списку">
        <i class="fas fa-arrow-left"></i>
    </a>
    Удаление масла со склада
</h3>

<div>
    <h4>
        Вы уверены, что желаете удалить запись?<br />
        Все связанные данные будут удалены!
    </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PurchasePrice)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PurchasePrice)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Margin)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Margin)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Oil)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Oil.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
